@using BankApp.ViewModels
@model UserViewModel
@{
ViewData["Title"] = "Register User";
}

<section class="container mt-5 pt-5">
    <h1 class="text-primary mt-5">
        Create a new user
    </h1>
    <hr />

    <form method="post" asp-action="Register" class="mt-5 w-50 mx-auto">
        <div asp-validation-summary="All" class="text-danger"></div>
        
        <div class="mb-3">
            <label asp-for="FirstName" class="form-label">
                User's First Name
            </label>
            <input type="text" asp-for="FirstName" class="form-control" placeholder="Enter First Name..." required>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="LastName" class="form-label">
                User's Last Name
            </label>
            <input type="text" asp-for="LastName" class="form-control" placeholder="Enter Last Name..." required>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Phone" class="form-label">
                User's Phone
            </label>
            <input type="tel" asp-for="Phone" class="form-control" placeholder="Enter Phone..." required>
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Address" class="form-label">
                User's Address
            </label>
            <input type="text" asp-for="Address" class="form-control" placeholder="Enter Address..." required>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label">
                User's Email
            </label>
            <input type="email" asp-for="Email" class="form-control" placeholder="Enter Email..." required>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label">
                User's Password
            </label>
            <input type="password" asp-for="Password" class="form-control" placeholder="Enter Password..." required>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ConfirmPassword" class="form-label">
                Confirm Password
            </label>
            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password..." required>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="mb-5">
            <button type="submit" class="btn btn-primary w-100">
                Create User
                <i class="fa fa-user-plus"></i>
            </button>
        </div>
    </form>

</section>